{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es6", "dom", "es2015.promise"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/**/*.d.ts"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.ts"
  ]
}